<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.openclassrooms.realestatemanager.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondaryPurple"
            android:gravity="top"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/header_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_toStartOf="@+id/search_icon"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:text="@string/app_title"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.155"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.432" />

            <ImageButton
                android:id="@+id/header_add_property_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:contentDescription="@string/menu_button_description"
                android:padding="15dp"
                android:src="@drawable/icon_add" />

            <ImageButton
                android:id="@+id/header_search_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:contentDescription="@string/search_icon"
                android:padding="15dp"
                android:src="@drawable/icon_search" />

        </androidx.appcompat.widget.Toolbar>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/secondaryPurple"
            app:cardCornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="45dp">

                    <Button
                        android:id="@+id/add_property_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_background"
                        android:drawableStart="@drawable/icon_house"
                        android:drawablePadding="10dp"
                        android:padding="15dp"
                        android:gravity="start"
                        android:text="@string/add_property_type"
                        android:textAllCaps="false"
                        android:textColor="@color/grayedText"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/add_property_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/add_property_price"
                        android:textColorHint="@color/grayedText"
                        android:autofillHints="input"
                        android:inputType="number"
                        android:textStyle="bold"
                        android:background="@drawable/rounded_background"
                        android:padding="15dp"
                        android:layout_marginBottom="10dp"
                        android:drawableStart="@drawable/icon_euro"
                        android:drawablePadding="10dp"
                        android:layout_weight="1"/>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="45dp">

                <EditText
                    android:id="@+id/add_property_surface"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_property_surface"
                    android:textColorHint="@color/grayedText"
                    android:autofillHints="input"
                    android:inputType="text"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_background"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="20dp"
                    android:drawableStart="@drawable/icon_surface"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/add_property_rooms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_property_rooms"
                    android:textColorHint="@color/grayedText"
                    android:autofillHints="input"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_background"
                    android:gravity="center"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:drawableStart="@drawable/icon_bed"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"/>

            </LinearLayout>

                <Button
                    android:id="@+id/add_property_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_property_desc"
                    android:textColor="@color/grayedText"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/rounded_background"
                    android:gravity="center"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:drawableStart="@drawable/icon_desc"/>

                <Button
                    android:id="@+id/add_property_photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_property_photos"
                    android:textColor="@color/grayedText"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/rounded_background"
                    android:gravity="center"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:drawableStart="@drawable/icon_photo"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="45dp">

                    <EditText
                        android:id="@+id/add_property_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/add_property_address"
                        android:textColorHint="@color/grayedText"
                        android:autofillHints="input"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:padding="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="20dp"
                        android:drawableStart="@drawable/icon_address"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/add_property_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/add_property_date"
                        android:textColorHint="@color/grayedText"
                        android:autofillHints="input"
                        android:inputType="date"
                        android:textStyle="bold"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:padding="15dp"
                        android:layout_marginBottom="10dp"
                        android:drawableStart="@drawable/icon_date"
                        android:layout_weight="1"/>

                </LinearLayout>

                <Button
                    android:id="@+id/add_property_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/icon_send"
                    android:drawablePadding="28dp"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:text="@string/add_property_btn"
                    android:textAllCaps="false"
                    android:textColor="@color/primaryPurple"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/properties_recycler_view_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:cardCornerRadius="20dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/properties_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"/>

            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
