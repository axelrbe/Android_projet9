<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/custom_window_image"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:src="@color/secondaryPurple"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        android:contentDescription="@string/property_photos"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="6dp">

        <TextView
            android:id="@+id/custom_window_property_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryPurple"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="type" />

        <TextView
            android:id="@+id/custom_window_property_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryPurple"
            android:textSize="18sp"
            tools:text="address" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/custom_window_property_surface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textColor="@color/secondaryPurple"
                android:textSize="18sp"
                tools:text="surface" />

            <TextView
                android:id="@+id/custom_window_property_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryPurple"
                android:textSize="18sp"
                tools:text="price" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>